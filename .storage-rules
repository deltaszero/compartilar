rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile photos
    match /profile_photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
    }
    
    // Children profile photos - parent can manage their children's photos
    match /children_photos/{childId}/{allPaths=**} {
      allow read: if request.auth != null;
      // Simplified rule - any authenticated user can upload for now
      // We'll validate parentId in the application code
      allow write: if request.auth != null;
    }
  }
}